function capitalizeWords(str) {                  //Create a function that takes a string as an arguments 
  let words = str.split(' ');                    //and converts the first character of each word to uppercase.
  let capitalizedWords = [];                    // Return the newly formatted string
  
  words.forEach(word => {
    capitalizedWords.push(word[0].toUpperCase() + word.slice(1));
  });
  
  return capitalizedWords.join(' ');
}


console.log(capitalizeWords('string'))
console.log(capitalizeWords('i love basketball'))